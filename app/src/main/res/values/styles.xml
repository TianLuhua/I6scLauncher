<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fragment_autoplay_tab_center">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="NoTitleTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="Stlye_setting_item">
        <item name="android:background">@drawable/select_settings_item_check</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Stlye_system_setting_indicator_line">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:background">#b5b5b5</item>
        <item name="android:layout_width">223dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--字体Style-->
    <style name="Stlye_system_setting_title">
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Stlye_setting_wifi_title" parent="Stlye_system_setting_title">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Stlye_setting_wifi_btn">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_fff</item>
    </style>

    <style name="Stlye_Item_lable_01">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ff515151</item>
    </style>

    <style name="Stlye_Item_lable_01_text" parent="Stlye_Item_lable_01">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ff515151</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Stlye_Item_lable_02">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#ff515151</item>
    </style>

    <style name="Stlye_system_setting_text">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Stlye_system_factory_setting_text">
        <item name="android:textColor">#f42a2a</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Stlye_system_setting_check_text" parent="Stlye_system_setting_text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Stlye_system_setting_date_time_disable" parent="Stlye_system_setting_check_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_999</item>
    </style>

    <style name="Stlye_system_setting_date_time_enable" parent="Stlye_system_setting_check_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_333</item>
    </style>


    <style name="Stlye_system_setting_wifi_value" parent="Stlye_system_setting_date_time_enable">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_333</item>
    </style>

    <style name="Stlye_system_setting_wifi_title" parent="Stlye_system_setting_wifi_value">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_fff</item>
    </style>


    <style name="Stlye_system_setting_text_note">
        <item name="android:textColor">#666</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Stlye_system_setting_text_commit_hint">
        <item name="android:textColor">@color/color_999</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Stlye_system_setting_text_commit">
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Stlye_wifi_add_network">
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Stlye_lockscreen_week">
        <item name="android:textColor">@color/color_fff</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Stlye_lockscreen_date">
        <item name="android:textColor">@color/color_fff</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Stlye_wifi_settings_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <!--pickdate-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

    <style name="dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>


    <!--自定义seekbarstyle-->
    <style name="Style_CustomSeekbar">
        <item name="android:maxHeight">10dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_horizontal</item>
        <item name="android:thumb">@mipmap/thumb_system_setting</item>
    </style>


</resources>
