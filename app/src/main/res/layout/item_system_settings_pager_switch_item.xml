<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="654dp"
    android:layout_height="56dp"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="75dp"
    android:layout_marginTop="126dp"
    android:background="@mipmap/bg_system_settings_pager_item">


    <TextView
        android:id="@+id/item_title"
        style="@style/Stlye_system_setting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="36dp"
        android:gravity="center"
        android:text="@string/color_ear" />

    <CheckBox
        android:id="@+id/item_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="36dp"
        android:button="@drawable/select_system_setting_switch"
        android:checked="true" />
</RelativeLayout>