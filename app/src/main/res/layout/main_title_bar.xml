<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorTransparent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/set_system_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/titlebar_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/titlebar_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/titlebar_icon"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="12" />
    </RelativeLayout>


    <com.boyue.boyuelauncher.widget.EnlargeAndNarrowAnimationView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toStartOf="@+id/wifistatusview"
        android:gravity="center_vertical"
        android:src="@mipmap/ic_launcher" />

    <com.boyue.boyuelauncher.widget.WIFIStatusView
        android:id="@+id/wifistatusview"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_toLeftOf="@id/batteryView"
        android:gravity="center_vertical"
        android:src="@drawable/custom_status_icon_wifi" />

    <com.boyue.boyuelauncher.widget.BatteryView
        android:id="@+id/batteryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toLeftOf="@id/clockview"
        android:gravity="center_vertical" />

    <com.boyue.boyuelauncher.widget.ClockView
        android:id="@+id/clockview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:textColor="#ffffffff"
        android:textSize="20sp" />

</RelativeLayout>
