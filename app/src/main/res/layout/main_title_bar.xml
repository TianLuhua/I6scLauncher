<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@mipmap/bg_top_bar_volume_seting"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/set_system_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>


    <com.boyue.boyuelauncher.widget.EnlargeAndNarrowAnimationView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/wifistatusview"
        android:gravity="center_vertical"
        android:src="@mipmap/ic_top_bar_setting" />

    <com.boyue.boyuelauncher.widget.WIFIStatusView
        android:id="@+id/wifistatusview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_toLeftOf="@id/batteryView"
        android:gravity="center_vertical"
        android:src="@drawable/custom_status_icon_wifi" />

    <com.boyue.boyuelauncher.widget.BatteryView
        android:id="@+id/batteryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:layout_toLeftOf="@id/clockview"
        android:gravity="center_vertical" />

    <com.boyue.boyuelauncher.widget.ClockView
        android:id="@+id/clockview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:textColor="#ffffffff"
        android:textSize="28sp" />

</RelativeLayout>
