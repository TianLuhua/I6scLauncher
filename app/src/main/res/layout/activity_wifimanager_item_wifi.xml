<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layWifi"
        android:layout_width="match_parent"
        android:layout_height="61dp">

        <TextView
            android:id="@+id/wifi_name"
            style="@style/Stlye_system_setting_date_time_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/hht" />

        <TextView
            android:id="@+id/wifi_has_saved"
            style="@style/Stlye_system_setting_date_time_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/wifi_name"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/has_saved"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/connected_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/wifi_name"
            android:src="@mipmap/ic_system_settings_wifi_connected"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/wifi_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="26dp"
            android:layout_toStartOf="@+id/ignore_ic"
            android:src="@drawable/level_list_settings_wifi" />

        <ImageView
            android:id="@+id/ignore_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="23dp"
            android:src="@mipmap/ic_system_settings_wifi_ignore"
             />
    </RelativeLayout>


    <View
        android:layout_width="604dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#cbcbcb" />
</RelativeLayout>