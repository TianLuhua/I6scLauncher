<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.boyue.boyuelauncher.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:checkedButton="@id/setting_colorEar">


            <RadioButton
                android:id="@+id/setting_colorEar"
                style="@style/Stlye_setting_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@mipmap/ic_launcher"
                android:text="@string/app_name" />

            <RadioButton
                android:id="@+id/setting_ProtectSetting"
                style="@style/Stlye_setting_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@mipmap/ic_launcher"
                android:text="@string/app_name" />

            <RadioButton
                android:id="@+id/setting_VolumeSetting"
                style="@style/Stlye_setting_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@mipmap/ic_launcher"
                android:text="@string/app_name" />

            <RadioButton
                android:id="@+id/setting_AutoShutDown"
                style="@style/Stlye_setting_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@mipmap/ic_launcher"
                android:text="@string/app_name" />

            <RadioButton
                android:id="@+id/setting_PreventAddictionSetting"
                style="@style/Stlye_setting_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@mipmap/ic_launcher"
                android:text="@string/app_name" />

            <RadioButton
                android:id="@+id/setting_Advance"
                style="@style/Stlye_setting_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@mipmap/ic_launcher"
                android:text="@string/app_name" />

            <RadioButton
                android:id="@+id/setting_FeefBack"
                style="@style/Stlye_setting_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@mipmap/ic_launcher"
                android:text="@string/app_name" />

        </RadioGroup>

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent" />

    </LinearLayout>


</LinearLayout>
