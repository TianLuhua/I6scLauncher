<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:clipChildren="false">

    <RelativeLayout
        android:id="@+id/bg_set_system_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/bg_top_bar_volume_seting"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/ic_set_system_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="52dp"
            android:gravity="center"
            android:textColor="@color/color_fff"
            android:textSize="22sp" />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/usb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="23dp"
        android:layout_toLeftOf="@+id/sd"
        android:src="@mipmap/ic_top_bar_usb" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/sd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/ic_settings"
        android:src="@mipmap/ic_top_bar_sd" />

    <!--<com.boyue.boyuelauncher.widget.SDAndUSBStatusView-->
    <!--android:id="@+id/ic_media"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_marginEnd="20dp"-->
    <!--android:layout_toStartOf="@+id/ic_settings"-->
    <!--android:gravity="center_vertical" />-->

    <ImageView
        android:id="@+id/ic_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/ic_wifistatusview"
        android:gravity="center_vertical"
        android:src="@mipmap/ic_top_bar_setting" />

    <com.boyue.boyuelauncher.widget.WIFIStatusView
        android:id="@+id/ic_wifistatusview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="17dp"
        android:layout_toStartOf="@id/ic_batteryView"
        android:gravity="center_vertical"
        android:src="@drawable/custom_status_icon_wifi" />

    <com.boyue.boyuelauncher.widget.BatteryView
        android:id="@+id/ic_batteryView"
        android:layout_width="53dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@id/ic_clockview"
        android:gravity="center_vertical" />

    <com.boyue.boyuelauncher.widget.ClockView
        android:id="@+id/ic_clockview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:textColor="#ffffffff"
        android:textSize="28sp" />

</RelativeLayout>
