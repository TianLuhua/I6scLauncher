<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_fcm_lockscreen">

    <ImageView
        android:id="@+id/number_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="166dp"
        android:layout_marginTop="123dp"
        android:src="@drawable/level_list_clock_item" />

    <ImageView
        android:id="@+id/number_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="123dp"
        android:layout_toRightOf="@+id/number_1"
        android:src="@drawable/level_list_clock_item"/>

    <ImageView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="123dp"
        android:layout_toRightOf="@+id/number_2"
        android:src="@mipmap/ic_fcm_lockscreen_point" />

    <ImageView
        android:id="@+id/number_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="123dp"
        android:layout_toRightOf="@+id/point"
        android:src="@drawable/level_list_clock_item" />

    <ImageView
        android:id="@+id/number_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="123dp"
        android:layout_toRightOf="@+id/number_3"
        android:src="@drawable/level_list_clock_item" />

    <TextView
        android:id="@+id/week"
        style="@style/Stlye_lockscreen_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="253dp"
        android:layout_marginTop="243dp"
        android:text="星期五" />

    <TextView
        android:id="@+id/date"
        style="@style/Stlye_lockscreen_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/week"
        android:layout_marginStart="187dp"
        android:layout_marginTop="13dp"
        android:text="2017年6月22日" />

    <ImageView
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginStart="239dp"
        android:src="@mipmap/ic_fcm_lockscreen_btn" />


</RelativeLayout>
